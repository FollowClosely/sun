.showcase-wrapper
  .showcase
    each val in showcase
      a.card-wrapper
        .showcase-item
          .show-card
            .circle
              img(src='images/#{val.img}')
            .show-card-right
              h2= val.head
              p= val.body
              .show-card-bottom-wrapper
                .show-card-bottom
                  hr
                  .show-card-footer
                    i.fa.fa-chevron-down
.clearfix